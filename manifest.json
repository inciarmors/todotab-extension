{
  "manifest_version": 3,
  "name": "TodoTab",
  "version": "1.0",
  "description": "Replaces the new tab page with a minimalist To-Do list.",
  "permissions": [
    "storage"
  ],
  "chrome_url_overrides": {
    "newtab": "src/index.html"
  },
  "icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
},
"action": {
  "default_icon": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
}